    btnEscanearQR.addEventListener('click', async () => {
        if (typeof Html5Qrcode === 'undefined') {
            showMessage('El escáner QR no está disponible. Use la búsqueda por documento.', 'warning');
            return;
        }
        
        if (html5QrCode && html5QrCode.isScanning) {
            await html5QrCode.stop();
            qrReaderContainer.classList.remove('show');
            btnEscanearQR.innerHTML = '<i class="fas fa-qrcode me-2"></i> Escanear QR';
            html5QrCode = null;
            return;
        }
        
        qrReaderContainer.classList.add('show');
        html5QrCode = new Html5Qrcode("qr-reader");

        const onScanSuccess = async (decodedText) => {
            console.log('📱 QR escaneado:', decodedText);

            let documentId = decodedText.trim();

            // Intenta extraer el ID si el texto es una URL con el parámetro 'doc'.
            // Esta es la lógica principal y debe tener prioridad.
            try {
                const url = new URL(decodedText);
                const docParam = url.searchParams.get('doc');
                // Si encuentra el parámetro 'doc', usa ese valor y la lógica termina aquí para la extracción.
                if (docParam) {
                    documentId = docParam;
                }
            } catch (e) {
                // Si el texto no es una URL válida, lo tratamos como texto plano.
                // Si contiene '/', asumimos que el ID es la última parte (útil para rutas).
                if (documentId.includes('/')) {
                    const parts = documentId.split('/');
                    documentId = parts[parts.length - 1];
                }
                console.warn('No es una URL válida, se procesó como texto plano.');
            }

            console.log('🔍 Documento extraído:', documentId);

            try {
                // Buscamos el afiliado con el ID ya corregido.
                await buscarPorDocumento(documentId);

                // Si tiene éxito, detenemos el escáner.
                if (html5QrCode && html5QrCode.isScanning) {
                    await html5QrCode.stop();
                    qrReaderContainer.classList.remove('show');
                    btnEscanearQR.innerHTML = '<i class="fas fa-qrcode me-2"></i> Escanear QR';
                    html5QrCode = null;
                }
            } catch(error) {
                // Si falla la búsqueda, mostramos el error y el escáner sigue activo.
                showMessage(`No se encontró afiliado con documento: ${documentId}`, 'error');
            }
        };
        
        try {
            await html5QrCode.start(
                { facingMode: "environment" },
                { fps: 10, qrbox: { width: 300, height: 300 } },
                onScanSuccess,
                () => {}
            );
            
            btnEscanearQR.innerHTML = '<i class="fas fa-stop-circle me-2"></i> Detener Escáner';
            showMessage('Escáner QR activo', 'info', 3000);
        } catch(err) {
            console.error('Error al iniciar escáner:', err);
            qrReaderContainer.classList.remove('show');
            showMessage('No se pudo iniciar el escáner. Use la búsqueda por documento.', 'error');
        }
    });
    

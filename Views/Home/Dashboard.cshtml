@model System_EPS.Models.ServiceDesk 
@{
    ViewData["Title"] = "Panel de Control";
    Layout = "_Layout";
}

@section Styles {
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&family=Oswald:wght@500;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/css/Dashboard.css" asp-append-version="true" />
}

<div class="flex min-h-screen bg-gray-50">

    <!-- SIDEBAR -->
    <aside class="w-64 bg-gray-800 text-white p-4 flex flex-col shadow-lg fixed h-full z-10">
        <div class="text-2xl font-extrabold text-blue-400 mb-8 pt-2 border-b border-gray-700 pb-4">
            <i class="fas fa-heartbeat mr-2"></i> System EPS
        </div>

        <nav class="flex-grow">
            <h3 class="text-xs uppercase font-semibold text-gray-400 mb-3 ml-2">Módulos</h3>
            
            <a href="@Url.Action("Dashboard", "Home")" class="flex items-center p-3 rounded-lg text-gray-100 bg-gray-700 font-medium mb-2 transition duration-150 hover:bg-gray-600">
                <i class="fas fa-desktop w-6 text-lg text-green-400"></i>
                <span class="ml-3 font-medium">Panel de Control</span>
            </a>

            <a href="@Url.Action("ManageAffiliate", "Home")" class="flex items-center p-3 rounded-lg text-gray-300 hover:bg-gray-700 hover:text-white transition duration-150">
                <i class="fas fa-user-plus w-6 text-lg text-yellow-400"></i>
                <span class="ml-3">Gestión de Afiliados</span>
            </a>

            <h3 class="text-xs uppercase font-semibold text-gray-400 mt-6 mb-3 ml-2">Visualización</h3>

            <a href="@Url.Action("Kiosk", "Home")" target="_blank" class="flex items-center p-3 rounded-lg text-gray-300 hover:bg-gray-700 hover:text-white transition duration-150 mb-2">
                <i class="fas fa-tablet-alt w-6 text-lg text-blue-400"></i>
                <span class="ml-3 font-medium">Kiosko de Turnos</span>
            </a>

            <a href="@Url.Action("TurnDisplay", "Home")" target="_blank" class="flex items-center p-3 rounded-lg text-gray-300 hover:bg-gray-700 hover:text-white transition duration-150 mb-2">
                <i class="fas fa-tv w-6 text-lg text-red-400"></i>
                <span class="ml-3 font-medium">Pantalla de Llamadas</span>
            </a>
        </nav>
        
        <div class="mt-auto pt-6 border-t border-gray-700 text-center">
            <p class="text-xs text-gray-500">Salud Linux &copy; 2025</p>
        </div>
    </aside>

    <!-- CONTENIDO PRINCIPAL -->
    <main class="flex-1 ml-64 p-8">
        <div class="container mx-auto">
            
            <!-- Header con botón de reinicio -->
            <div class="flex justify-between items-center mb-6">
                <h1 class="text-3xl font-extrabold text-gray-900">Panel de Control de Turnos</h1>
                <button id="btnResetSystem" class="btn-reset text-white px-6 py-3 rounded-lg font-bold shadow-lg">
                    <i class="fas fa-redo mr-2"></i> Reiniciar Sistema
                </button>
            </div>
            
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                
                <!-- COLUMNA 1: Panel de Operación -->
                <div class="lg:col-span-1">
                    <div class="bg-white rounded-xl shadow-lg">
                        <div class="p-5 bg-gray-700 text-white font-semibold text-xl flex items-center rounded-t-xl">
                            <i class="fas fa-desktop mr-3"></i> Panel de Operación
                        </div>
                        <div class="p-6">
                            <div class="mb-6">
                                <label for="selectServiceDesk" class="block text-gray-700 text-sm font-bold mb-2">
                                    <i class="fas fa-cash-register mr-1"></i> Puesto de Atención:
                                </label>
                                <select id="selectServiceDesk" class="w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500">
                                    @if (ViewBag.ServiceDesks != null)
                                    {
                                        @foreach (var desk in ViewBag.ServiceDesks)
                                        {
                                            <option value="@desk.Id">@desk.DeskNumber</option>
                                        }
                                    }
                                </select>
                            </div>
                            <button id="btnLlamarSiguiente" class="btn-llamar w-full p-4 rounded-xl text-lg font-bold text-white shadow-lg">
                                <i class="fas fa-phone-volume mr-2"></i> Llamar Siguiente
                            </button>
                            <div class="card-atendiendo text-center shadow-xl">
                                <h5 class="text-xl font-bold text-white mb-2">
                                    <i class="fas fa-user-nurse mr-2"></i> Atendiendo Ahora
                                </h5>
                                <div id="turnoActual" class="font-oswald text-6xl font-extrabold text-white mb-2">- - -</div>
                                <div id="afiliadoActual" class="text-white text-base">Esperando turno...</div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- COLUMNA 2: Fila de Espera -->
                <div class="lg:col-span-1">
                    <h3 class="text-2xl font-extrabold text-gray-800 mb-3 flex items-center">
                        <i class="fas fa-users mr-3 text-blue-600"></i> Fila de Espera
                    </h3>
                    <div class="bg-white rounded-xl shadow-lg custom-scrollbar overflow-y-auto" style="max-height: calc(100vh - 200px);">
                        <ul id="listaEspera" class="divide-y divide-gray-200 p-2">
                            <li class="p-4 text-gray-500 font-medium text-center">Cargando...</li>
                        </ul>
                    </div>
                </div>

                <!-- COLUMNA 3: Historial de Hoy -->
                <div class="lg:col-span-1">
                    <h3 class="text-2xl font-extrabold text-gray-800 mb-3 flex items-center">
                        <i class="fas fa-history mr-3 text-indigo-600"></i> Historial de Hoy
                    </h3>
                    <div class="bg-white rounded-xl shadow-lg custom-scrollbar overflow-y-auto" style="max-height: calc(100vh - 200px);">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50 sticky top-0 z-10">
                                <tr>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Turno</th>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Hora</th>
                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Afiliado</th>
                                </tr>
                            </thead>
                            <tbody id="historialHoy" class="bg-white divide-y divide-gray-200">
                                <tr><td colspan="3" class="px-4 py-4 text-center text-sm text-gray-500">Cargando...</td></tr>
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </main>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.min.js"></script>
    <script src="~/js/dashboard.js"></script>
    <script>
        document.getElementById('btnResetSystem')?.addEventListener('click', async () => {
            if (!confirm('¿Está seguro de reiniciar el sistema? Esto eliminará todos los turnos del día.')) {
                return;
            }
            
            const btn = document.getElementById('btnResetSystem');
            btn.disabled = true;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i> Reiniciando...';
            
            try {
                const response = await fetch('/api/Tickets/reset', { method: 'POST' });
                if (response.ok) {
                    alert('Sistema reiniciado correctamente');
                    // Recargar la página para limpiar todo
                    location.reload();
                } else {
                    alert('Error al reiniciar el sistema');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error de conexión');
            } finally {
                btn.disabled = false;
                btn.innerHTML = '<i class="fas fa-redo mr-2"></i> Reiniciar Sistema';
            }
        });
    </script>
}
}
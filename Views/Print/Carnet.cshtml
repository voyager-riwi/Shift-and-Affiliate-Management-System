@model System_EPS.Models.Affiliate

@{
    Layout = null; // Página en blanco para imprimir
}

<!DOCTYPE html>
<html>
<head>
    <title>Carnet Afiliado</title>
    <style>
        body { 
            font-family: 'Segoe UI', sans-serif; 
            width: 350px; /* Ancho típico de impresora de recibos/carnets */
            text-align: center;
            margin: 0 auto;
            padding: 15px;
        }
        .header { font-size: 1.5em; font-weight: bold; margin-bottom: 10px; }
        .photo { 
            width: 150px; 
            height: 150px; 
            object-fit: cover;
            border-radius: 50%;
            border: 3px solid #0077b6;
            margin: 10px auto;
        }
        .details p { margin: 5px 0; }
        .details .name { font-size: 1.2em; font-weight: bold; }
        .qr-code { width: 200px; height: 200px; margin: 15px auto; }
    </style>
</head>
<body onload="window.print();">

<div class="header">EPS VOYAGER S.A</div>
<p>Carnet de Afiliado</p>
<hr>

<img src="@Model.PhotoBase64" alt="Foto del Afiliado" class="photo" />

<div class="details">
    <p class="name">@Model.FullName</p>
    <p>Documento: @Model.DocumentId</p>
</div>

<hr>
<p>Escanee para ver su información</p>
<img src="@Url.Action("Generate", "QrCode", new { id = Model.Id })" alt="Código QR" class="qr-code" />

</body>
</html>
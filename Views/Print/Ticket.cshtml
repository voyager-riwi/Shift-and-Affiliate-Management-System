@model System_EPS.Models.Ticket

@{
    Layout = null; // No queremos la barra de navegación ni el footer, solo el tiquete.
}

<!DOCTYPE html>
<html>
<head>
    <title>Tiquete</title>
    <style>
        /* Estilos muy básicos para la impresora de tiquetes */
        body { font-family: monospace; width: 250px; text-align: center; }
        h1 { margin: 5px 0; }
        p { margin: 5px 0; }
        .turno { font-size: 2.5em; font-weight: bold; }
    </style>
</head>
<body onload="window.print();">

<h1>Salud Linux</h1>
<p>Gracias por su visita</p>
<hr/>
<p>Su turno es:</p>
<h2 class="turno">@Model.TicketCode</h2>
<hr/>
<p>Fecha: @Model.CreatedAt.ToString("g")</p>
<p>¡Espere a ser llamado!</p>

</body>
</html>